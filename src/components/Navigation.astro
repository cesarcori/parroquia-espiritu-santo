---
import NavLink from "./NavLink.astro";
import { SITE_TITLE_DEFAULT } from "../consts";
const baseUrl = `${Astro.url.origin}${import.meta.env.BASE_URL}`;
---

<div class="mx-auto max-w-7xl px-2">
  <nav
    class="flex sm:h-16 items-center justify-between max-sm:mt-4
      max-sm:flex-col"
  >
    <div class="flex items-center justify-center">
      <a class="ml-4 font-bold text-amber-500 p-5" href={baseUrl}>
        {SITE_TITLE_DEFAULT}</a
      >
    </div>
    <div class="flex max-sm:my-3">
      <NavLink href="/">Inicio</NavLink>
      <NavLink href="/nosotros">Nosotros</NavLink>
      <NavLink href="/cancionero">Cancionero</NavLink>
    </div>
  </nav>
</div>

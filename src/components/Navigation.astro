---
import NavLink from "./NavLink.astro";
import { SITE_TITLE_DEFAULT } from "../consts";
const baseUrl = `${Astro.url.origin}${import.meta.env.BASE_URL}`;
---

<div class="mx-auto">
  <nav class="flex h-16 mt-2 items-center justify-start">
    <div class="flex items-center">
      <a class="ml-4 font-bold text-amber-500" href={baseUrl}>
        {SITE_TITLE_DEFAULT}</a
      >
    </div>
    <div class="flex ml-20 space-x-4">
      <NavLink href="/">Inicio</NavLink>
      <NavLink href="/nosotros">Nosotros</NavLink>
      <NavLink href="/cancionero">Cancionero</NavLink>
    </div>
  </nav>
</div>

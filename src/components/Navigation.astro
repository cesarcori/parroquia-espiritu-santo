---
import NavLink from "./NavLink.astro";
import { SITE_TITLE_DEFAULT } from "../consts";
const baseUrl = `${Astro.url.origin}${import.meta.env.BASE_URL}`;
---

<div class="mx-auto max-w-7xl">
  <nav class="flex h-16 mt-2 items-center justify-between">
    <div class="flex items-center">
      <a class="ml-4 font-bold text-amber-600" href={baseUrl}>
        {SITE_TITLE_DEFAULT}</a
      >
    </div>
    <div class="flex space-x-4">
      <NavLink href="/">Inicio</NavLink>
      <NavLink href="/about">Nosotros</NavLink>
      <NavLink href="/blog">Canciones</NavLink>
    </div>
  </nav>
</div>

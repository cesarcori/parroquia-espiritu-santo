---
import { type CollectionEntry, getCollection } from "astro:content";
import CancioneroLayout from "../../layouts/CancioneroLayout.astro";
import { render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("cancion");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"cancion">;

const post = Astro.props;
const { Content } = await render(post);
---

<CancioneroLayout {...post.data}>
  <Content />
</CancioneroLayout>
